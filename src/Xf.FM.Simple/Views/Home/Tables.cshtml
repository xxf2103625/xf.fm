@{
    Layout = "_Admin";
    ViewData["Title"] = "表格";
}
<div class="box">
    <div class="box-header">
        <h3>简单ajax</h3>
    </div>
    <div class="box-body">
        <div class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
                <div class="col-md-12">
                    <table id="myTable" class="table table-bordered table-hover dataTable"></table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="box">
    <div class="box-header">
        <h3>自定义查询</h3>
    </div>
    <div class="box-body">
        <div class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
                <div class="col-md-12">
                    <table id="myTable" class="table table-bordered table-hover dataTable"></table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: "/home/tablesajax",
                columns: [
                    {
                        name: 'Id',
                        data: 'id',
                        title: "Id",
                        //sortable: true,
                        //searchable: true,
                    },
                    {
                        name: 'Name',
                        data: "name",
                        title: "姓名",
                        sortable: true,
                        searchable: true
                    },
                    {
                        name: 'Title',
                        data: "title",
                        title: "标题",
                        //sortable: true,
                        //searchable: true
                    }, {
                        name: 'State',
                        data: "state",
                        title: "状态",
                        //sortable: true,
                        //searchable: true
                    }
                ]
            });
        });
    </script>
}
